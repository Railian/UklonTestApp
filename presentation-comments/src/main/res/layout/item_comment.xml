<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/textViewCommentEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.2"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="?android:textColorSecondary"
            android:textSize="10sp"
            tools:text="Overline" />

        <TextView
            android:id="@+id/textViewCommentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto_medium"
            android:textAppearance="?android:textAppearanceListItem"
            android:textColor="?android:textColorPrimary"
            tools:text="Three-line item" />

        <TextView
            android:id="@+id/textViewCommentBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:lineSpacingExtra="2dp"
            android:textAppearance="?android:textAppearanceListItemSecondary"
            android:textColor="?android:textColorSecondary"
            tools:layout_editor_absoluteX="16dp"
            tools:text="Secondary line text Lorem ipsum dolor sit amet,  consectetur adipiscing elit" />

    </LinearLayout>

</android.support.v7.widget.CardView>
